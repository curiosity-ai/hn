// See all bridge.json configuration options at https://github.com/bridgedotnet/Bridge/wiki/global-configuration
{
  "output": "$(OutDir)/h5/",
  "fileName": "app.js",
  "html": {
    "disabled": false,
    "title": "HackerNews"
  },
  "resources": [
    {
      "name": "images",
      "files": [ "assets/img/*" ],
      "output": "assets/img/"
    },
    {
      "name": "js",
      "files": [ "assets/js/*" ],
      "output": "assets/js/"
    },
    {
      "name": "css",
      "files": [ "assets/css/*" ],
      "output": "assets/css/"
    }
  ],
  "cleanOutputFolderBeforeBuildPattern": "*.js|*.css",
  "console": {
    "enabled": false
  },
  "loader": {
    "type": "Global"
  },
  "sourceMap": {
    "enabled": false
  },
  "reflection": {
    "disabled": false
  },
  "generateTypeScript": false,
  "rules": {
    "anonymousType": "Plain",
    "arrayIndex": "Managed",
    "autoProperty": "Plain",
    "boxing": "Managed",
    "externalCast": "Plain",
    "inlineComment": "Plain",
    "integer": "Managed",
    "lambda": "Plain",
    "useShortForms": true
  }
}